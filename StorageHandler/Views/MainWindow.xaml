<Window x:Class="StorageHandler.Views.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:StorageHandler"
       xmlns:converters="clr-namespace:StorageHandler.Converters"
       xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
       mc:Ignorable="d"
       Title="MainWindow"
       Height="600" Width="920"
       WindowStyle="None"
       AllowsTransparency="True"
       Background="Transparent">

    <Window.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        
        <Style x:Key="MenuButtonTheme" TargetType="RadioButton">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource CategoryButtonCornerRadius}"
                                Padding="15,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="Collapsed" x:Name="ActionButtons">
                                    <!-- Settings Button -->
                                    <Button x:Name="SettingsButton" 
                                            Width="{DynamicResource IconSize}" Height="{DynamicResource IconSize}" 
                                            Margin="0,0,5,0"
                                            Background="{DynamicResource SelectionBrush}"
                                            BorderThickness="0"
                                            Tag="{TemplateBinding Tag}"
                                            Click="CategorySettings_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="{DynamicResource CategoryButtonCornerRadius}"/>
                                            </Style>
                                        </Button.Resources>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="{DynamicResource CategoryButtonCornerRadius}">
                                                    <TextBlock Text="âš™" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Opacity" Value="0.9"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <!-- Delete Button -->
                                    <Button x:Name="DeleteButton" 
                                            Width="{DynamicResource IconSize}" Height="{DynamicResource IconSize}" 
                                            Background="{DynamicResource SelectionBrush2}"
                                            BorderThickness="0"
                                            Tag="{TemplateBinding Tag}"
                                            Click="CategoryDelete_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="{DynamicResource CategoryButtonCornerRadius}"/>
                                            </Style>
                                        </Button.Resources>
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="DeleteBorder" Background="{TemplateBinding Background}" CornerRadius="{DynamicResource CategoryButtonCornerRadius}">
                                                    <TextBlock Text="ðŸ—‘" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter TargetName="DeleteBorder" Property="Background" Value="{DynamicResource SelectionBrush3}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SelectionBrush}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter TargetName="ActionButtons" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="TextboxTheme" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{DynamicResource ControlBackgroundBrush}" CornerRadius="{DynamicResource SearchBoxCornerRadius}" Padding="10,5">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"/>
                                <TextBlock Text="{TemplateBinding Tag}" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                           IsHitTestVisible="False"
                                           VerticalAlignment="Center"
                                           Visibility="Collapsed"
                                           x:Name="Placeholder"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <!-- Enable resize support via WindowChrome -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0" ResizeBorderThickness="8"/>
    </shell:WindowChrome.WindowChrome>

    <Grid MouseLeftButtonDown="DragWindow">
        <Border Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="{DynamicResource WindowCornerRadius}"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="300*" />

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="70" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Grid.RowSpan="2" Source="/Assets/Images/Logo.png" 
                  Width="310" 
                  Height="380" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="2" x:Name="CategoryStackPanel" Margin="10,0">
                <Button Height="{DynamicResource BaseControlHeight}"
                        Foreground="White"
                        FontSize="14"
                        Click="NewCategory_Click"
                        Margin="0,10,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border"
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    CornerRadius="{DynamicResource CategoryButtonCornerRadius}"
                                    Padding="15,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="+" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Text="{DynamicResource Str_NewCategory}"/> 
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/> 
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>

            <!-- Top Bar Buttons Removed -->

            <Button x:Name="CloseButton"
                    Grid.Row="0" Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,5,20,0"
                    Width="{DynamicResource SmallControlHeight}" Height="{DynamicResource SmallControlHeight}"
                    Click="CloseApp_Click"
                    Background="{DynamicResource SelectionBrush}"
                    BorderThickness="0"
                    Foreground="{DynamicResource TextPrimaryBrush}"
                    Panel.ZIndex="100"
                    ToolTip="{DynamicResource Str_CloseApp}">
                <TextBlock Text="âœ•" FontSize="16" FontWeight="Bold" Margin="0,0,1,1"/>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="{DynamicResource BackButtonCornerRadius}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Setter TargetName="Border" Property="Background" Value="#C42B1C"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Grid Grid.Column="1" Grid.Row="1" Margin="20,10,20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BackButton"
                        Grid.Column="0"
                        Click="BackButton_Click"
                        Visibility="Collapsed"
                        Width="60"
                        Height="{DynamicResource SmallControlHeight}"
                        Margin="0,0,10,0"
                        Background="{DynamicResource SelectionBrush}"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        BorderThickness="0">
                    <TextBlock Text="â†©" FontSize="20" FontWeight="Bold" Margin="0,-2,0,0"/>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="{DynamicResource BackButtonCornerRadius}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#6C757D"/>
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBox Grid.Column="1" 
                         Height="{DynamicResource SmallControlHeight}"
                         VerticalContentAlignment="Center"
                         Style="{StaticResource TextboxTheme}" 
                         Tag="{DynamicResource Str_SearchPlaceholder}" />
            </Grid>

            <!-- Storage Grid -->
            <Canvas x:Name="StorageGrid" 
                    Grid.Column="1" 
                    Grid.Row="2" 
                    Background="Transparent" 
                    Margin="40,10,0,0"
                    MouseRightButtonUp="StorageGrid_MouseRightButtonUp">
                
                <!-- Storage boxes will be dynamically added here -->
            </Canvas>

            <!-- Items Grid -->
            <DataGrid x:Name="ItemsGrid"
                      Grid.Column="1"
                      Grid.Row="2"
                      Margin="40,10,40,10"
                      AutoGenerateColumns="False"
                      Visibility="Collapsed"
                      Background="{DynamicResource ItemListBackgroundBrush}"
                      BorderThickness="0"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CellEditEnding="ItemsGrid_CellEditEnding">
                <!-- Columns are generated dynamically in code -->
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="{DynamicResource Str_AddItem}" Click="AddItem_Click"/>
                        <Separator/>
                        <MenuItem Header="{DynamicResource Str_DeleteItem}" Click="DeleteItem_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>

            <!-- Floating Action Buttons -->
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Panel.ZIndex="100">
                <Button x:Name="RevertButton"
                        Click="RevertChanges_Click"
                        Width="60"
                        Height="{DynamicResource SmallControlHeight}"
                        Margin="0,0,10,0"
                        Background="{DynamicResource SelectionBrush2}"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        BorderThickness="0"
                        ToolTip="{DynamicResource Str_Revert}">
                    <TextBlock Text="{DynamicResource Str_Undo}" FontSize="14" FontWeight="Bold"/>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="{DynamicResource BackButtonCornerRadius}"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="{DynamicResource BackButtonCornerRadius}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource SelectionBrush3}"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="Border" Property="Background" Value="#6C757D"/>
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="SaveButton"
                        Click="SaveChanges_Click"
                        Width="60"
                        Height="{DynamicResource SmallControlHeight}"
                        Background="{DynamicResource SelectionBrush}"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        BorderThickness="0"
                        ToolTip="{DynamicResource Str_Save}">
                    <TextBlock Text="ðŸ’¾" FontSize="16"/>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="{DynamicResource BackButtonCornerRadius}"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="{DynamicResource BackButtonCornerRadius}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#6C757D"/>
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            
        </Grid>
    </Grid>
</Window>