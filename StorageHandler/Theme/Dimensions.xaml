<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Dimensions -->
    <system:Double x:Key="BaseControlHeight">50</system:Double>
    <system:Double x:Key="LargeControlHeight">40</system:Double>
    <system:Double x:Key="StandardControlHeight">35</system:Double>
    <system:Double x:Key="SmallControlHeight">30</system:Double>
    <system:Double x:Key="IconSize">24</system:Double>
    <system:Double x:Key="SmallIconSize">16</system:Double>
    
    <CornerRadius x:Key="BaseCornerRadius">10</CornerRadius>
    <CornerRadius x:Key="SmallCornerRadius">5</CornerRadius>
    
    <!-- Calculated Radiuses (approximate based on 0.2 ratio of height) -->
    <!-- Category Button: Height 50, Radius 10 -->
    <CornerRadius x:Key="CategoryButtonCornerRadius">10</CornerRadius>
    
    <!-- Search Box: Height ~40, Radius 10 (Matched to Window Radius 20 - Margin 10) -->
    <CornerRadius x:Key="SearchBoxCornerRadius">10</CornerRadius>
    
    <!-- Back Button: Height 30, Radius 10 (Matched to Window Radius 20 - Margin 10) -->
    <CornerRadius x:Key="BackButtonCornerRadius">10</CornerRadius>
    
    <!-- Standard Button: Height 35-40, Radius 10 -->
    <CornerRadius x:Key="StandardButtonCornerRadius">10</CornerRadius>
    
    <!-- Window Radius -->
    <CornerRadius x:Key="WindowCornerRadius">20</CornerRadius>

    <!-- Margins -->
    <Thickness x:Key="StandardMargin">10</Thickness>
    <Thickness x:Key="LargeMargin">20</Thickness>
    
</ResourceDictionary>